@page "/projects"

<style>
    .project-gallery img {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 12px;
        max-height: 250px;
        object-fit: cover;
        width: 100%;
    }

        .project-gallery img:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

    .project-title {
        font-size: 1rem;
        font-weight: 600;
        margin-top: 0.5rem;
        color: #333;
        text-align: center;
    }

    .load-more-btn {
        padding: 0.6rem 2rem;
        border-radius: 50px;
        font-weight: 500;
        transition: background 0.3s ease, transform 0.2s;
    }

        .load-more-btn:hover {
            background-color: #222;
            color: #fff;
            transform: translateY(-2px);
        }
</style>

<section class="py-5">
    <div class="container">
        <h1 class="fw-bold text-center mb-5">Project Gallery</h1>

        <div class="row">
            @foreach (var project in visibleProjects)
            {
                <div class="col-md-4 mb-4 text-center">
                    <img src="@project.Imagesrc" class="project-gallery img-fluid shadow-sm" alt="@project.Title" />
                    <div class="project-title">@project.Title</div>
                </div>
            }
        </div>

        @if (visibleCount < projectGallery.Count)
        {
            <div class="text-center mt-4">
                <button class="btn btn-outline-dark load-more-btn" @onclick="LoadMore">
                    Load More
                </button>
            </div>
        }
    </div>
</section>

@code {
    private List<ProjectItem> projectGallery = new();
    private List<ProjectItem> visibleProjects = new();
    private int visibleCount = 10;
    private int increment = 10;

    protected override void OnInitialized()
    {
        int count = 1;

        // IMG-20250708-WA0001 to WA0020
        for (int i = 1; i <= 20; i++)
        {
            projectGallery.Add(new ProjectItem
            {
                Title = $"Project {count++}",
                Imagesrc = $"images/projects/IMG-20250708-WA{i.ToString("D4")}.jpg"
            });
        }
        for (int i = 42; i <= 47; i++)
        {
            projectGallery.Add(new ProjectItem
            {
                Title = $"Project {count++}",
                Imagesrc = $"images/projects/IMG-20250707-WA{i.ToString("D4")}.jpg"
            });
        }

        // IMG-20250708-WA0047 to WA0071
        for (int i = 47; i <= 71; i++)
        {
            projectGallery.Add(new ProjectItem
            {
                Title = $"Project {count++}",
                Imagesrc = $"images/projects/IMG-20250708-WA{i.ToString("D4")}.jpg"
            });
        }

        // IMG-20250708-WA0073 to WA0118
        for (int i = 73; i <= 118; i++)
        {
            projectGallery.Add(new ProjectItem
            {
                Title = $"Project {count++}",
                Imagesrc = $"images/projects/IMG-20250708-WA{i.ToString("D4")}.jpg"
            });
        }

        visibleProjects = projectGallery.Take(visibleCount).ToList();
    }

    private void LoadMore()
    {
        visibleCount = Math.Min(visibleCount + increment, projectGallery.Count);
        visibleProjects = projectGallery.Take(visibleCount).ToList();
    }

    public class ProjectItem
    {
        public string Title { get; set; } = string.Empty;
        public string Imagesrc { get; set; } = string.Empty;
    }
}
