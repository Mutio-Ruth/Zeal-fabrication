@inherits LayoutComponentBase

<!-- Sticky Navbar -->
<header class="sticky-top bg-dark text-dark shadow-sm">
    <nav class="navbar navbar-expand-lg navbar-dark container py-3">
        <!-- Logo and Branding -->
        <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
            <img src="/Images/aman-jakhar-CrTTr9xF-w4-unsplash.jpg" alt="FABWELD LTD Logo" style="height: 40px;" class="me-2 rounded-circle" />
            Zeal Fabrication And Welding LTD
        </a>

        <!-- Mobile Toggler -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navigation Links -->
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <NavLink href="/" class="nav-link" activeClass="active" Match="NavLinkMatch.All">Home</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink href="/about" class="nav-link" activeClass="active">About</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink href="/services" class="nav-link" activeClass="active">Services</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink href="/projects" class="nav-link" activeClass="active">Projects Gallery</NavLink>
                </li>
                <li class="nav-item">
                    <NavLink href="/contact" class="nav-link" activeClass="active">Contact</NavLink>
                </li>
            </ul>
        </div>
    </nav>
</header>

<!-- Main Body Content -->
<main class="container-fluid px-0">
    @Body
</main>

<!-- Footer -->
<footer class="bg-dark  text-white pt-5 pb-3">
    <div class="container">
        <div class="row text-center text-md-start">
            <!-- Company Info -->
            <div class="col-md-4 mb-4">
                <h5 class="fw-bold">Zeal Fabrication And Welding</h5>
                <p>
                    Specialists in custom metal fabrication and industrial welding.
                    Trusted by contractors, builders, and manufacturers across the region.
                </p>
            </div>

            <!-- Quick Links -->
            <div class="col-md-4 mb-4">
                <h6 class="fw-bold">Quick Links</h6>
                <ul class="list-unstyled">
                    <li><a href="/" class="text-white text-decoration-none d-block mb-1">Home</a></li>
                    <li><a href="/about" class="text-white text-decoration-none d-block">About</a></li>
                    <li><a href="/services" class="text-white text-decoration-none d-block mb-1">Services</a></li>
                    <li><a href="/projects" class="text-white text-decoration-none d-block mb-1">Projects</a></li>
                    <li><a href="/contact" class="text-white text-decoration-none d-block">Contact</a></li>
                </ul>
            </div>
            <div class="col-md-4 mb-4 text-light">
                <h6 class="fw-bold">Contact Us</h6>

                <p class="mb-1">
                    <i class="bi bi-geo-alt-fill me-2 text-warning"></i>
                    Location: Syokimau, Katani Road, Machakos, Kenya
                </p>

                <p class="mb-1">
                    <i class="bi bi-telephone-fill me-2 text-warning"></i>
                    Telephone: +254 748 041 852 / 0790 587 967
                </p>

                <p class="mb-1">
                    <i class="bi bi-envelope-fill me-2 text-warning"></i>
                    Email: <a href="mailto:info@zealfab.com" class="text-decoration-none text-light">
                        info@zealfab.com
                    </a>
                </p>

                <p class="mb-1">
                    <i class="bi bi-whatsapp me-2 text-success"></i>
                    WhatsApp: <a href="https://wa.me/254790587967" target="_blank" class="text-decoration-none text-light">
                        Chat with us
                    </a>
                </p>
            </div>


            </div>
        </div>


    <hr class="border-light mx-4" />
    <div class="text-center small">
        &copy; @DateTime.Now.Year Zeal Fabrication And Welding. All rights reserved.
    </div>
</footer>

